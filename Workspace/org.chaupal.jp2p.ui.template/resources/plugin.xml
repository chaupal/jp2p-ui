<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="$packageName$.application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="$packageName$.Application">
         </run>
      </application>
   </extension>
   <extension
         id="$packageName$.chaupal_product"
         point="org.eclipse.core.runtime.products">
      <product
            application="$packageName$.application"
            description="Reference Chaupal Application"
            name="Reference Chaupal Product">
         <property
               name="Reference Chaupal RCP"
               value="Reference Chaupal Product">
         </property>
         <property
               name="$shortName$"
               value="Reference Chaupal Product">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
            <command
                  commandId="org.eclipse.ui.newWizard"
                  label="New"
                  style="push">
            </command>
         </menu>
         <menu
               label="Window">
            <command
                  commandId="org.eclipse.ui.window.resetPerspective"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  style="push">
            </command>
         </menu>
         <menu
               label="Help"
               mnemonic="&amp;H">
            <command
                  commandId="org.eclipse.ui.help.installationDialog"
                  style="push">
            </command>
            <separator
                  name="org.chaupal.rcp.separator1">
            </separator>
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>

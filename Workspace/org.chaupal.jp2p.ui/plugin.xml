<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
  <extension
       point="org.eclipse.core.runtime.adapters">
    <factory
          adaptableType="net.jp2p.container.component.IJp2pComponent"
          class="org.chaupal.jp2p.ui.adapter.Jp2pAdapterFactory">
       <adapter
             type="org.eclipse.ui.views.properties.IPropertySource">
       </adapter>
    </factory>
  </extension>
  <extension
        point="org.eclipse.ui.views">
     <category
           id="org.chaupal.jp2p.ui.container"
           name="JP2P Container Navigation"
           parentCategory="org.eclipse.ui">
     </category>
       <view
            allowMultiple="false"
            category="org.chaupal.jp2p.ui.container"
            class="org.chaupal.jp2p.ui.container.Jp2pContainerNavigator"
            icon="resources/ContainerRed.png"
            id="org.chaupal.jp2p.ui.container.view"
            name="JP2P Container View"
            restorable="true">
      </view>
  </extension>
   <extension
         id="org.chaupal.jp2p.container.viewer"
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="org.chaupal.jp2p.ui.container.view">
         <includes>
            <contentExtension
                  isRoot="true"
                  pattern="org.chaupal.jp2p.container">
            </contentExtension>
         </includes>
      </viewerContentBinding>
     </extension>
   <extension
         id="org.chaupal.jp2p.content"
         name="Chaupal JP2P Container Content"
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="org.chaupal.jp2p.ui.provider.Jp2pServiceContentProvider"
            id="org.chaupal.jp2p.container"
            labelProvider="org.chaupal.jp2p.ui.provider.Jp2pLabelProvider"
            name="JP2P Context"
            priority="normal">
         <triggerPoints>
            <or>
               <instanceof
                     value="net.jp2p.container.component.IJp2pComponent">
               </instanceof>
            </or>
         </triggerPoints>
         <possibleChildren>
            <instanceof
                  value="java.lang.Object">
            </instanceof>
         </possibleChildren>
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.chaupal.jp2p.ui.perspective.Perspective"
            icon="resources/chaupal.png"
            id="org.chaupal.jp2p.ui.perspective"
            name="Chaupal  JP2P Container Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.chaupal.jp2p.ui.perspective">
        <view
               closeable="true"
               id="org.chaupal.jp2p.ui.container.view"
               minimized="false"
               moveable="true"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
         <view
               closeable="true"
               id="org.eclipse.ui.views.PropertySheet"
               minimized="false"
               relationship="bottom"
               relative="org.chaupal.jp2p.ui.container.view"
               visible="true">
         </view>
         <view
               closeable="true"
               id="org.chaupal.jp2p.ui.peergroup.view"
               minimized="false"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
         <view
               closeable="true"
               id="org.eclipse.ui.console.ConsoleView"
               minimized="false"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
         <view
               id="org.eclipse.ui.views.ProblemView"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.console.ConsoleView">
         </view>
      </perspectiveExtension>
   </extension>
</plugin>
